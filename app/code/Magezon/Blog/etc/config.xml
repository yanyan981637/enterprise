<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
        <recaptcha_frontend>
            <type_for>
                <blog_comment_form></blog_comment_form>
            </type_for>
        </recaptcha_frontend>
		<mgzblog>
			<general>
				<enabled>1</enabled>
				<route>blog</route>
				<date_format>F j, Y</date_format>
				<show_toplinks>1</show_toplinks>
				<main_color>#f88c00</main_color>
			</general>
			<latest_page>
				<title>Blog</title>
				<page_layout>2columns-right</page_layout>
				<meta_title>Blog</meta_title>
				<meta_keywords>blog</meta_keywords>
				<meta_description>blog</meta_description>
				<layout>fixed_thumb</layout>
				<posts_per_page>10</posts_per_page>
				<grid_col>2</grid_col>
			</latest_page>
			<category_page>
				<layout>fixed_thumb</layout>
				<posts_per_page>10</posts_per_page>
				<grid_col>2</grid_col>
			</category_page>
			<tag_page>
				<enabled>1</enabled>
				<page_layout>2columns-right</page_layout>
				<layout>fixed_thumb</layout>
				<posts_per_page>10</posts_per_page>
				<grid_col>2</grid_col>
				<default_robots>INDEX,FOLLOW</default_robots>
			</tag_page>
			<author_page>
				<enabled>1</enabled>
				<page_layout>2columns-right</page_layout>
				<layout>fixed_thumb</layout>
				<posts_per_page>10</posts_per_page>
				<grid_col>2</grid_col>
				<default_robots>INDEX,FOLLOW</default_robots>
			</author_page>
			<archive_page>
				<page_layout>2columns-right</page_layout>
				<layout>fixed_thumb</layout>
				<posts_per_page>10</posts_per_page>
				<grid_col>2</grid_col>
				<default_robots>INDEX,FOLLOW</default_robots>
			</archive_page>
			<search_page>
				<layout>fixed_thumb</layout>
				<posts_per_page>10</posts_per_page>
				<grid_col>2</grid_col>
				<default_robots>INDEX,FOLLOW</default_robots>
			</search_page>
			<rss>
				<enabled>1</enabled>
				<text>Subscribe to RSS Feed</text>
				<latest_posts>1</latest_posts>
				<category>1</category>
			</rss>
			<post_listing>
                <enabled>1</enabled>
				<post_author>1</post_author>
				<post_date>1</post_date>
				<post_cats>1</post_cats>
				<post_comments>1</post_comments>
				<post_views>1</post_views>
				<post_read_time>1</post_read_time>
			</post_listing>
			<post_page>
				<social_box>1</social_box>
				<author_box>1</author_box>
				<post_meta>
					<enabled>1</enabled>
					<post_author>1</post_author>
					<post_date>1</post_date>
					<post_cats>1</post_cats>
					<post_comments>1</post_comments>
					<post_views>1</post_views>
                    <post_read_time>1</post_read_time>
				</post_meta>
				<related_posts>
					<enabled>1</enabled>
					<title>Related Posts</title>
				</related_posts>
				<related_products>
					<enabled>1</enabled>
					<title>Related Products</title>
				</related_products>
				<comments>
					<type>native</type>
					<allow_guests>1</allow_guests>
					<need_approve>1</need_approve>
					<admin_email_template>blog_comments_admin_email_template</admin_email_template>
					<customer_email_template>blog_comments_customer_email_template</customer_email_template>
					<number_of_comments>10</number_of_comments>
					<gdpr>1</gdpr>
                    <recaptcha>
                        <recaptcha_type></recaptcha_type>
                    </recaptcha>
				</comments>
                <rating_button>
                    <enabled>1</enabled>
                    <like_button>1</like_button>
                    <dislike_button>1</dislike_button>
                </rating_button>
				<prev_next_post>
					<enabled>1</enabled>
					<prev_next_post_option>0</prev_next_post_option>
				</prev_next_post>
			</post_page>
			<product_page>
				<related_posts>
					<enabled>1</enabled>
					<title>Related Posts</title>
				</related_posts>
			</product_page>
			<sidebar>
				<search_form>
					<enabled>1</enabled>
					<title>Search The Blog</title>
					<sort_order>10</sort_order>
				</search_form>
				<categories>
					<enabled>1</enabled>
					<title>Categories</title>
					<sort_order>20</sort_order>
					<show_post_count>1</show_post_count>
					<max_depth>4</max_depth>
				</categories>
				<archives>
					<enabled>1</enabled>
					<title>Archives</title>
					<sort_order>30</sort_order>
					<show_post_count>0</show_post_count>
				</archives>
				<tabs>
					<enabled>1</enabled>
					<sort_order>40</sort_order>
					<sticky>1</sticky>
					<popular_posts>
						<enabled>1</enabled>
						<title>Popular</title>
						<number_of_posts>5</number_of_posts>
					</popular_posts>
					<recent_posts>
						<enabled>1</enabled>
						<title>Recent</title>
						<number_of_posts>5</number_of_posts>
					</recent_posts>
					<recent_comments>
						<enabled>1</enabled>
						<title>Comments</title>
						<number_of_comments>5</number_of_comments>
					</recent_comments>
				</tabs>
				<tags>
					<enabled>1</enabled>
					<title>Tags</title>
					<sort_order>50</sort_order>
					<number_of_tags>15</number_of_tags>
					<show_post_count>1</show_post_count>
				</tags>
				<featured_posts>
					<enabled>1</enabled>
					<title>Featured Posts</title>
					<sort_order>35</sort_order>
					<number_of_posts>5</number_of_posts>
				</featured_posts>
			</sidebar>
			<permalink>
				<route>blog</route>
				<post_suffix>.html</post_suffix>
				<post_use_categories>1</post_use_categories>
				<category_route>category</category_route>
				<category_suffix></category_suffix>
				<archive_route>archive</archive_route>
				<archive_suffix></archive_suffix>
				<tag_route>tag</tag_route>
				<tag_suffix></tag_suffix>
				<author_route>author</author_route>
				<author_suffix></author_suffix>
				<search_route>search</search_route>
			</permalink>
			<sitemap>
				<latest_page>
					<enabled>1</enabled>
					<priority>1</priority>
					<changefreq>daily</changefreq>
				</latest_page>
				<category>
					<enabled>1</enabled>
					<priority>0.9</priority>
					<changefreq>daily</changefreq>
				</category>
				<tag>
					<enabled>1</enabled>
					<priority>0.8</priority>
					<changefreq>daily</changefreq>
				</tag>
				<author>
					<enabled>1</enabled>
					<priority>0.7</priority>
					<changefreq>daily</changefreq>
				</author>
				<post>
					<enabled>1</enabled>
					<priority>0.5</priority>
					<changefreq>daily</changefreq>
					<image_include>all</image_include>
				</post>
			</sitemap>
			<top_navigation>
				<enabled>1</enabled>
				<title>Blog</title>
				<include_categories>1</include_categories>
				<show_post_count>0</show_post_count>
				<max_depth>3</max_depth>
			</top_navigation>
		</mgzblog>
	</default>
</config>
