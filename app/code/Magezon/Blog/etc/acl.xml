<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magezon_Blog::blog" title="Blog" sortOrder="10">
                        <resource id="Magezon_Blog::post" title="Post" translate="title"
                            sortOrder="10">
                            <resource id="Magezon_Blog::post_save" title="Save Post" sortOrder="10" />
                            <resource id="Magezon_Blog::post_delete" title="Delete Post"
                                sortOrder="20" />
                        </resource>
                        <resource id="Magezon_Blog::category" title="Category" translate="title"
                            sortOrder="20">
                            <resource id="Magezon_Blog::category_save" title="Save Category"
                                sortOrder="10" />
                            <resource id="Magezon_Blog::category_delete" title="Delete Category"
                                sortOrder="20" />
                        </resource>
                        <resource id="Magezon_Blog::tag" title="Tag" translate="title"
                            sortOrder="30">
                            <resource id="Magezon_Blog::tag_save" title="Save Tag" sortOrder="10" />
                            <resource id="Magezon_Blog::tag_delete" title="Delete Tag"
                                sortOrder="20" />
                        </resource>
                        <resource id="Magezon_Blog::author" title="Author" translate="title"
                            sortOrder="40">
                            <resource id="Magezon_Blog::author_save" title="Save Author"
                                sortOrder="10" />
                            <resource id="Magezon_Blog::author_delete" title="Delete Author"
                                sortOrder="20" />
                            <resource id="Magezon_Blog::profile" title="My Profile" sortOrder="30" />
                        </resource>
                        <resource id="Magezon_Blog::comment" title="Comment" translate="title"
                            sortOrder="50">
                            <resource id="Magezon_Blog::comment_save" title="Save Comment"
                                sortOrder="10" />
                            <resource id="Magezon_Blog::comment_delete" title="Delete Comment"
                                sortOrder="20" />
                        </resource>
                        <resource id="Magezon_Blog::import" title="Import" translate="title"
                            sortOrder="60" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magezon_Blog::settings" title="Blog" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>