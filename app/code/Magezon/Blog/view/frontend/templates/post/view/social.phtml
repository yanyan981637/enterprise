	<ul class="blog-flat-social">
		<?php if ($facebook) { ?>
			<li><a href="http://www.facebook.com/sharer.php?u=<?= $url ?>" class="social-facebook" rel="external" target="_blank"><i class="fab mgz-fa-facebook-f"></i> <span><?= __('Facebook') ?></span></a></li>
