			<li><a href="http://www.linkedin.com/shareArticle?mini=true&url=<?= $url ?>&title=<?= $block->escapeHtml($post->getTitle()) ?>" class="social-linkedin" rel="external" target="_blank"><i class="fab mgz-fa-linkedin-in"></i> <span><?= __( 'LinkedIn') ?></span></a></li>
