$coreHelper = $this->helper('\Magezon\Core\Helper\Data');
$dataHelper = $this->helper('\Magezon\Blog\Helper\Data');
$post      = $this->getCurrentPost();
$url       = $post->getUrl();
$facebook  = true;
$twitter   = true;
$linkedin  = true;
$pinterest = true;
?>
<?php if ($dataHelper->getConfig('post_page/social_box')) { ?>
<div id="blog-post-social" class="blog-post-social">
