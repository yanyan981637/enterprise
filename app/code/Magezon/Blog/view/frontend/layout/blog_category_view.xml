<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<update handle="blog_layout"/>
	<body>
		<referenceBlock name="page.main.title">
			<block class="Magezon\Blog\Block\Rss\Link\Category" name="rss.link" template="Magezon_Blog::rss/link.phtml" ifconfig="mgzblog/rss/enabled"/>
		</referenceBlock>
		<referenceContainer name="columns.top">
			<block class="Magezon\Blog\Block\Category\View" name="category.content" template="Magezon_Blog::category/content.phtml"/>
		</referenceContainer>
		<referenceContainer name="content">
			<block class="Magezon\Blog\Block\Category\View" name="category.posts" template="Magezon_Blog::category/posts.phtml"/>
		</referenceContainer>
	</body>
</page>