<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<attribute name="class" value="mgz-blog"/>
		<referenceContainer name="sidebar.main">
			<block class="Magezon\Blog\Block\Sidebar" name="blog.sidebar" template="Magezon_Blog::sidebar.phtml">
				<block class="Magezon\Blog\Block\Sidebar\SearchForm" name="sidebar.searchform" as="search_form"
					   template="Magezon_Blog::sidebar/search_form.phtml"/>
				<block class="Magezon\Blog\Block\Sidebar\Categories" name="sidebar.categories" as="categories"
					   template="Magezon_Blog::sidebar/categories.phtml"/>
				<block class="Magezon\Blog\Block\Sidebar\Archives" name="sidebar.archives" as="archives"
					   template="Magezon_Blog::sidebar/archives.phtml"/>
				<block class="Magezon\Blog\Block\Sidebar\Tags" name="sidebar.tags" as="tags"
					   template="Magezon_Blog::sidebar/tags.phtml"/>
				<block class="Magezon\Blog\Block\Sidebar\Tabs" name="sidebar.tabs" as="tabs"
					   template="Magezon_Blog::sidebar/tabs.phtml">
					<block class="Magezon\Blog\Block\Sidebar\PopularPosts" name="popular_posts"
						   template="Magezon_Blog::sidebar/popular_posts.phtml">
						<arguments>
							<argument translate="true" name="title" xsi:type="string">Popular</argument>
						</arguments>
					</block>
					<block class="Magezon\Blog\Block\Sidebar\RecentPosts" name="recent_posts"
						   template="Magezon_Blog::sidebar/recent_posts.phtml">
						<arguments>
							<argument translate="true" name="title" xsi:type="string">Recent</argument>
						</arguments>
					</block>
					<block class="Magezon\Blog\Block\Sidebar\RecentComments" name="recent_comments"
						   template="Magezon_Blog::sidebar/recent_comments.phtml">
						<arguments>
							<argument translate="true" name="title" xsi:type="string">Comments</argument>
						</arguments>
					</block>
				</block>
				<block class="Magezon\Blog\Block\Sidebar\FeaturedPosts" name="featured_posts"
					   template="Magezon_Blog::sidebar/featured_posts.phtml"/>
			</block>
		</referenceContainer>
		<referenceContainer name="before.body.end">
			<block class="Magento\Framework\View\Element\Template" name="blog.footer"
				   template="Magezon_Blog::footer.phtml"/>
		</referenceContainer>
	</body>
</page>