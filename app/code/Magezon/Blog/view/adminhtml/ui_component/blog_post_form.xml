<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">blog_post_form.blog_post_form_data_source</item>
            <item name="deps" xsi:type="string">blog_post_form.blog_post_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Post Information</item>
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="string">Magezon\Blog\Block\Adminhtml\Post\Edit\Button\Save</item>
            <item name="delete" xsi:type="string">Magezon\Blog\Block\Adminhtml\Post\Edit\Button\Delete</item>
            <item name="view" xsi:type="string">Magezon\Blog\Block\Adminhtml\Post\Edit\Button\View</item>
            <item name="back" xsi:type="string">Magezon\Blog\Block\Adminhtml\Post\Edit\Button\Back</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="namespace" xsi:type="string">blog_post_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="blog_post_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magezon\Blog\Ui\DataProvider\Post\Form\DataProvider</argument>
            <argument name="name" xsi:type="string">blog_post_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">post_id</argument>
            <argument name="requestFieldName" xsi:type="string">post_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">General Information</item>
                <item name="dataScope" xsi:type="string">data</item>
                <item name="sortOrder" xsi:type="number">10</item>
                <item name="collapsible" xsi:type="boolean">false</item>
            </item>
        </argument>
        <field name="post_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
        <field name="is_active">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Enable Post</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Title</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="read_time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Read Time(Minutes)</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="content">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="initializeFieldsetDataByDefault" xsi:type="boolean">true</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Content</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">300px</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Content</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="rows" xsi:type="number">6</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                </item>
            </argument>
        </field>
        <field name="excerpt">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Excerpt</item>
                    <item name="rows" xsi:type="number">6</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="display_settings">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="initializeFieldsetDataByDefault" xsi:type="boolean">true</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Display Settings</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="publish_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Publish Date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">MM/d/yy</item>
                        <item name="timeFormat" xsi:type="string">HH:mm</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                    <item name="additionalInfo" xsi:type="string" translate="true">
                        You can set a future date to schedule the publication. The post will not be available for reading until this date.
                    </item>
                </item>
            </argument>
        </field>
        <field name="end_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">End Date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="sortOrder" xsi:type="number">15</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">MM/d/yy</item>
                        <item name="timeFormat" xsi:type="string">HH:mm</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                    <item name="additionalInfo" xsi:type="string" translate="true">
                        You can set an end date of the publication. The post will not be available for reading after this date.
                    </item>
                </item>
            </argument>
        </field>
        <field name="image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">Magezon_Core/form/element/file-manager</item>
                    <item name="chooseBtnLabel" xsi:type="string">Select Image</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="component" xsi:type="string">Magezon_Core/js/form/element/file-manager</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Featured Image</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="imports" xsi:type="array">
                        <item name="tmp" xsi:type="string">${$.provider}:data.image_tmp</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="type" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magezon\Blog\Model\Post\Source\TypeList</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Type</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magezon_Blog/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="value" xsi:type="string">image</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="default" xsi:type="string">image</item>
                    <item name="groupsConfig" xsi:type="array">
                        <item name="video" xsi:type="array">
                            <item name="video" xsi:type="string">video_link</item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="video_link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Video Link</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="additionalInfo" xsi:type="string">
                        <![CDATA[Eg: <strong>Youtube</strong>: https://www.youtube.com/watch?v=QBT6MQ7Z5eg<br/><strong>Vimeo</strong>: https://vimeo.com/66658527]]>
                    </item>
                </item>
            </argument>
        </field>
        <field name="customer_group_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Customer Groups</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="dataScope" xsi:type="string">customer_group_id</item>
                </item>
                <item name="options" xsi:type="object">Magento\CatalogRule\Model\Rule\CustomerGroupsOptionsProvider</item>
            </argument>
        </field>
        <field name="featured">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Featured</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
        <field name="position">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Position</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">post</item>
                    <item name="dataScope" xsi:type="string">position</item>
                    <item name="sortOrder" xsi:type="number">65</item>
                </item>
            </argument>
        </field>
        <field name="pinned">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Pin post at the top</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
        <field name="allow_comment">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Allow Comment</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="sortOrder" xsi:type="number">80</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>
        <field name="page_layout">
            <argument name="data" xsi:type="array">
                <!-- <item name="options" xsi:type="object">Magento\Cms\Model\Page\Source\PageLayout</item> -->
                <item name="options" xsi:type="object">Magezon\Blog\Model\Page\Source\PageLayout</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Page Layout</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="dataScope" xsi:type="string">page_layout</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">90</item>
                    <item name="value" xsi:type="string">default</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="websites">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="initializeFieldsetDataByDefault" xsi:type="boolean">true</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Post in Websites</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="dataScope" xsi:type="string">store_id</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
                <item name="options" xsi:type="object">\Magento\Cms\Ui\Component\Listing\Column\Cms\Options</item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="search_engine_optimization">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="initializeFieldsetDataByDefault" xsi:type="boolean">true</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Search Engine Optimization</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="identifier">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">5</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="component" xsi:type="string">Magezon_Core/js/components/generated-urlkey</item>
                    <item name="mask" xsi:type="string">{{title}}</item>
                    <item name="label" xsi:type="string" translate="true">URL Key</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="canonical_url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Canonical URL</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="additionalInfo" xsi:type="string" translate="true">
                        The canonical URL that this page should point to. Leave empty to default to post url.
                    </item>
                </item>
            </argument>
        </field>
        <field name="meta_title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Meta Title</item>
                </item>
            </argument>
        </field>
        <field name="meta_keywords">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Meta Keywords</item>
                </item>
            </argument>
        </field>
        <field name="meta_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Meta Description</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="og">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="initializeFieldsetDataByDefault" xsi:type="boolean">true</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Open Graph Metadata</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="og_title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">OG Title</item>
                    <item name="additionalInfo" xsi:type="string" translate="true">
                        Leave blank to use Meta Title by default.
                    </item>
                </item>
            </argument>
        </field>
        <field name="og_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">OG Description</item>
                    <item name="additionalInfo" xsi:type="string" translate="true">
                        Leave blank to use Meta Description by default.
                    </item>
                </item>
            </argument>
        </field>
        <field name="og_img">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">Magezon_Core/form/element/file-manager</item>
                    <item name="chooseBtnLabel" xsi:type="string">Select Image</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="component" xsi:type="string">Magezon_Core/js/form/element/file-manager</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">OG Image</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="imports" xsi:type="array">
                        <item name="tmp" xsi:type="string">${$.provider}:data.og_img_tmp</item>
                    </item>
