<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<type name="Magezon\Builder\Data\Elements">
		<arguments>
			<argument name="elements" xsi:type="array">
				<item name="icon_box" xsi:type="array">
					<item name="name" xsi:type="string" translate="true">Icon Box</item>
					<item name="class" xsi:type="string">Magezon\PageBuilderIconBox\Data\Element\IconBox</item>
					<item name="templateUrl" xsi:type="string">Magezon_PageBuilderIconBox/js/templates/builder/element/iconbox.html</item>
					<item name="block" xsi:type="string">Magezon\PageBuilderIconBox\Block\Element\IconBox</item>
					<item name="element" xsi:type="string">Magezon_PageBuilderIconBox/js/builder/element/iconbox</item>
					<item name="template" xsi:type="string">Magezon_PageBuilderIconBox::element/iconbox.phtml</item>
					<item name="sortOrder" xsi:type="number">850</item>
					<item name="icon" xsi:type="string">fas mgz-fa-box-open</item>
					<item name="icon_styles" xsi:type="array">
						<item name="color" xsi:type="string">#b78610</item>
						<item name="font-size" xsi:type="string">30px</item>
					</item>
					<item name="description" xsi:type="string">Display icon with texts and button</item>
					<item name="group" xsi:type="string">content</item>
				</item>
			</argument>
		</arguments>
	</type>
