<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="mitac_customer_device" resource="default" engine="innodb" comment="Customer Device">
		<column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="System ID"/>
    	<column xsi:type="varchar" name="customer_id" length="255" nullable="false" comment="Customer ID"/>
    	<column xsi:type="int" name="device_id" padding="5" unsigned="true" nullable="false" comment="CAS Device ID (Micc)"/>
    	<column xsi:type="varchar" name="serialnumber" length="255" nullable="false" comment="Serialnumber"/>
		<column xsi:type="date" name="purchase_date" nullable="false" comment="Purchase Date"/>
		<column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created Datetime"/>
		<column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated Datetime"/>
		<constraint xsi:type="primary" referenceId="SD_PRIMARY">
			<column name="id"/>
		</constraint>
	</table>
</schema>
