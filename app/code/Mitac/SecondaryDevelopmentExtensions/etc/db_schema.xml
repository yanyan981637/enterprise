<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="mageplaza_blog_post" resource="default" engine="innodb" comment="Post Table">
        <column xsi:type="text" name="post_content_type" nullable="true" comment="Post Content Type"/>
        <column xsi:type="text" name="post_external_link" nullable="true" comment="Post External Link"/>
        <column xsi:type="smallint" name="can_show_in_home" default="1"  nullable="false" comment="Post External Link"/>
        <column xsi:type="text" name="event_start_date" nullable="true" comment="Event Start Date" />
        <column xsi:type="text" name="event_end_date" nullable="true" comment="Event End Date" />
    </table>
</schema>
