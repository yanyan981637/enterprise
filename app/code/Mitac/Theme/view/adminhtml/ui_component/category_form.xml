<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/ui_configuration.xsd">
    <fieldset name="design">
        <field name="theme_color">
            <argument name="data" xsi:type="array">
              <item name="options" xsi:type="object">Mitac\Theme\Model\Attribute\Source\ThemeColor</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Theme Color</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="dataScope" xsi:type="string">theme_color</item>
                    <item name="sortOrder" xsi:type="number">300</item>
                    <item name="default" xsi:type="string">orange</item>
                    <item name="globalScope" xsi:type="boolean">true</item> 
                </item>
            </argument>
        </field>
    </fieldset>
</form>
