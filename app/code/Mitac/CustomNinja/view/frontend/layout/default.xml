<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Mio Footer -->
        <referenceBlock class="Magento\Framework\View\Element\Template" name="catalog.compare.sidebar" template="Mitac_CustomCMS::html/layout/compare-sidebar.phtml"/>
        <move element="catalog.compare.sidebar" destination="mio.ninja.footer.wrapper" before="-"/>

        <referenceContainer name="mio.footer.wrapper" remove="true" />
        <referenceBlock name="footer-container" remove="true" />

        <referenceContainer name="page.wrapper">
            <container name="mio.ninja.footer.wrapper" htmlId="footer" htmlTag="footer" before="copyright">
                <block class="Magezon\NinjaMenus\Block\TopMenu" name="mio.ninja.catalog.topnav.mobile" template="Mitac_CustomNinja::footer_mobile.phtml" before="-">
                    <arguments>
                        <argument name="identifier" translate="true" xsi:type="string">footer-menu_mobile</argument>
                    </arguments>
                </block>
                <block class="Magezon\NinjaMenus\Block\TopMenu" name="mio.ninja.catalog.topnav" template="Mitac_CustomNinja::footer.phtml" before="-">
                    <arguments>
                        <argument name="identifier" translate="true" xsi:type="string">footer-menu</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        
    </body>
</page>