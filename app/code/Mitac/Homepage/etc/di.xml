<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Mitac\Homepage\Api\Data\BlockInterface" type="Mitac\Homepage\Model\Block" />
    <preference for="Mitac\Homepage\Api\BlockRepositoryInterface" type="Mitac\Homepage\Model\Repository\BlockRepository" />
    <preference for="Mitac\Homepage\Api\Data\BlockSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />

    <virtualType name="BlockGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">
                  Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter
                </item>
                <item name="fulltext" xsi:type="object">
                  Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter
                </item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="BlockGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">
              Mitac\Homepage\Model\Resource\Block\Collection
            </argument>
            <argument name="filterPool" xsi:type="object" shared="false">
              BlockGirdFilterPool
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="Mitac\Homepage\Model\ResourceModel\Block\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">mitac_homebanners</argument>
            <argument name="resourceModel" xsi:type="string">Mitac\Homepage\Model\ResourceModel\Block</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="homepage_index_listing_data_source" xsi:type="string">
                  Mitac\Homepage\Model\ResourceModel\Block\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Ui\Component\Wysiwyg\ConfigInterface">
        <plugin name="custom_name" type="Mitac\Homepage\Plugin\Config"  sortOrder="10"/>
    </type>

    <type name="Mitac\Community\Controller\Adminhtml\ImageFile\Upload">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">Image/Tmp</argument>
            <argument name="basePath" xsi:type="string">Image/Mitac/Homepage/</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </type>

    <type name="Mitac\Homepage\Controller\Adminhtml\Index\Save">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">Image/Tmp</argument>
            <argument name="basePath" xsi:type="string">Image/Mitac/Homepage/</argument>
        </arguments>
    </type>

    <!--type name="Mitac\Features\Controller\Adminhtml\Index\MassDelete">
        <arguments>
            <argument name="successMessage" xsi:type="string" translate="true">A total of %1 record(s) have been deleted.</argument>
            <argument name="errorMessage" xsi:type="string" translate="true">An error occurred while deleting record(s). %1</argument>
        </arguments>
    </type-->

</config>
