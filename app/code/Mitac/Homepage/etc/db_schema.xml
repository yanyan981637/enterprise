<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="mitac_homebanners" resource="default" engine="innodb" comment="Banner Information">
		<column xsi:type="int" name="banners_id" padding="10" unsigned="true" nullable="false" identity="true" comment="System ID"/>
		<column xsi:type="int" name="stores_id" padding="10" unsigned="true" nullable="false" comment="Stores Id"/>
		<column xsi:type="int" name="sort_id" padding="10" unsigned="true" nullable="false" comment="Sort Id"/>
		<column xsi:type="varchar" name="type" length="255" nullable="false" comment="Type"/>
		<column xsi:type="varchar" name="title" length="255" nullable="false" comment="Title"/>
		<column xsi:type="text" name="text" nullable="false" comment="Text"/>
		<column xsi:type="varchar" name="button" length="50" nullable="false" comment="Button"/>
		<column xsi:type="varchar" name="img" length="255" nullable="false" comment="Img"/>
		<column xsi:type="varchar" name="PageIdentifier" length="255" nullable="false" comment="page Identifier"/>
		<column xsi:type="varchar" name="cms_page_id" length="255" nullable="false" comment="CMS page id"/>
		<column xsi:type="varchar" name="url" length="255" nullable="false" comment="Url"/>
		<column xsi:type="varchar" name="youtube" length="255" nullable="false" comment="Youtube"/>
		<column xsi:type="smallint" name="status" unsigned="true" nullable="false" default="0" comment="Is Enabled"/>
		<column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created Datetime"/>
		<column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated Datetime"/>
		<column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" disabled="true" comment="Product Id"/>
		<constraint xsi:type="primary" referenceId="SD_PRIMARY">
			<column name="banners_id"/>
		</constraint>
	</table>
	<table name="mitac_homebanner_stores" resource="default" engine="innodb" comment="Banner Information">
		<column xsi:type="int" name="banners_id" padding="10" unsigned="true" nullable="false" comment="System ID"/>
		<column xsi:type="int" name="stores_id" padding="10" unsigned="true" nullable="false" comment="Stores Id"/>
	</table>
	<table name="mitac_homebanner_pages" resource="default" engine="innodb" comment="Banner Information">
		<column xsi:type="int" name="banners_id" padding="10" unsigned="true" nullable="false" comment="System ID"/>
		<column xsi:type="varchar" name="identifier" length="255" nullable="false" comment="Page Identifier"/>
	</table>
</schema>
