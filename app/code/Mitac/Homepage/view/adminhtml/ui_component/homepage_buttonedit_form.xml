<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">homepage_buttonedit_form.homepage_buttonedit_form_data_source</item>
            <item name="deps" xsi:type="string">homepage_buttonedit_form.homepage_buttonedit_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Banner with Button Block</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">buttonedit_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Mitac\Community\Block\Adminhtml\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Mitac\Homepage\Block\Adminhtml\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Mitac\Homepage\Block\Adminhtml\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Mitac\Homepage\Block\Adminhtml\Edit\SaveButton</item>
            <!--<item name="save_and_continue" xsi:type="string">Mitac\Homepage\Block\Adminhtml\Edit\SaveAndContinueButton</item>-->
        </item>
    </argument>
    <dataSource name="homepage_buttonedit_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Mitac\Homepage\Model\Block\DataProvider</argument>
            <argument name="name" xsi:type="string">homepage_buttonedit_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">banners_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="homepage/index/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="block_data">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Banner with Button Block</item>
            </item>
        </argument>
        <field name="banners_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Banners ID</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
        <field name="stores_id" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">stores_id</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Mitac\Homepage\Ui\Component\Listing\Column\Block\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="sort_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Block Sort</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">sort_id</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>
        <field name="type" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Block Type</item>
                    <item name="default" xsi:type="string">button</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">type</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <formElements>
                <select>
                    <settings>
                        <options class="Mitac\Homepage\Ui\Component\Listing\Column\Block\BlockType"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="block_content" sortOrder="10">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Banner with Button Ttitle</item>
            </item>
        </argument>
        <field name="title" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Mitac\Homepage\Model\Wysiwyg\DefaultConfigProvider</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">150px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">false</item>
                        <item name="add_directives" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label>title</label>
                <dataScope>title</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="block_text" sortOrder="20">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Banner with Button Text</item>
            </item>
        </argument>
        <field name="text" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">150px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">false</item>
                        <item name="add_directives" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label>text</label>
                <dataScope>text</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="block_data2" sortOrder="30">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Banner with Button Image</item>
            </item>
        </argument>
        <field name="button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Block Button</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">button</item>
                </item>
            </argument>
        </field>
        <field name="img">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="label" xsi:type="string" translate="true">Background Image Of Block</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">imageUploader</item>
                    <item name="previewTmpl" xsi:type="string">Mitac_Features/image-preview</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="initialMediaGalleryOpenSubpath" xsi:type="string">Image/Mitac/Homepage</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="community/imagefile/upload/field/img"/>
                    </item>
                </item>
            </argument>
        </field>
        <field name="url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="label" xsi:type="string" translate="true">Link Url</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">url</item>
                </item>
            </argument>
        </field>
        <field name="youtube">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Youtube URL</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">youtube</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                        <item name="validate-url" xsi:type="boolean">true</item>
                        <item name="validate-clean-url" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="status" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <formElements>
                <select>
                    <settings>
                        <options class="Mitac\Homepage\Ui\Component\Listing\Column\Block\StatusOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="block_information" sortOrder="40">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Information</item>
            </item>
        </argument>
        <field name="created_at" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Created at</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">created_at</item>
                    <item name="disabled" xsi:type="string">true</item>
                </item>
            </argument>
        </field>
        <field name="updated_at" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Updated at</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="dataScope" xsi:type="string">updated_at</item>
                    <item name="disabled" xsi:type="string">true</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
