<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">homepage_sort_form.homepage_sort_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true"></item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/index/" />
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
        <namespace>homepage_sort_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>homepage_sort_form.homepage_sort_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="homepage_sort_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="homepage/index/sortsave" />
        </settings>
        <dataProvider class="Mitac\Homepage\Model\Block\SortDataProvider" name="homepage_sort_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>stores_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="block_data">
        <settings>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <label translate="true">Sort Home Block</label>
        </settings>
        <field name="stores_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">mitac_homebanners</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>stores_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Mitac\Homepage\Ui\Component\Listing\Column\Block\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <htmlContent name="sortable_content">
            <block class="Mitac\Homepage\Block\Adminhtml\SortBlock" name="menuTree" template="Mitac_Homepage::sortblock.phtml"/>
        </htmlContent>
    </fieldset>
</form>
