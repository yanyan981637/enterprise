            var events = this.events,
                eventName,
                selector,
                callback,
                key;

            for (key in events) {
                if (!events.hasOwnProperty(key)) {
                    continue;
                }

                callback    = this[events[key]];
                key         = key.split(' ');

                eventName   = key[0];
                selector    = key.slice(1).join(' ');

                $(selector).on(eventName, $.proxy(callback, this));
            }
        },

        save: function () {
            if (this.typeChange) {
