<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- 將 page.main.title 移動到 category.view.container -->
        <move element="page.main.title" destination="category.view.container" before="-" />

        <!-- 引用 category.view.container 並添加相關區塊 -->
        <referenceContainer name="columns.top">
            <container name="category.view.container" htmlTag="div" htmlClass="category-view">
                <block class="Magento\Catalog\Block\Category\View" name="category.description" template="Magento_Catalog::category/description.phtml"/>
                <!-- <block class="Magento\Catalog\Block\Category\View" name="category.name.description" template="Magento_Catalog::category/name_description.phtml" /> -->
            </container>
        </referenceContainer>
<!-- 
        <container name="category.view.container">
            <move element="page.main.title" destination="category.view.container" before="-" />
        </container> -->
    


        <!-- Add custom-main-content block -->
        <referenceContainer name="main.content">
            <container name="custom-main-content" htmlTag="div" htmlClass="custom-main-content">
                <!-- Add a custom block for rendering additional content -->
                <block class="Magento\Framework\View\Element\Template" name="custom.block" template="Magento_Catalog::category/custom_content.phtml" />
            </container>
        </referenceContainer>

        <!-- Move leftnav-block to main-content -->
        <move element="catalog.leftnav" destination="main.content" before="-" />

        <!-- 移除 div.sidebar.additional -->
        <referenceContainer name="columns">
            <referenceContainer name="div.sidebar.additional" remove="true"/>
        </referenceContainer>

        <!-- 移除 div.sidebar.main -->
        <referenceContainer name="columns">
            <referenceContainer name="div.sidebar.main" remove="true"/>
        </referenceContainer>


        <!-- <referenceContainer name="columns">
            <block class="Magento\LayeredNavigation\Block\Navigation\Category" name="quick_navigation.filter_list.wrapper" template="Mirasvit_QuickNavigation::wrapper.phtml" before="-">
                <block class="Mirasvit\QuickNavigation\Block\FilterList" name="quick_navigation.filter_list" template="Mirasvit_QuickNavigation::filterList.phtml" before="-"/>
            </block>
        </referenceContainer> -->


        <!-- Move leftnav-block to main-content -->
        <!-- <move element="product.attributes.wrapper" destination="main.content" after="catalog.leftnav" />
        <move element="product.reviews.wrapper" destination="product.info.details.after.wrapper.columns" after="product.attributes.wrapper" /> -->
        <!-- Full Width product.info.details.after.wrapper -->
